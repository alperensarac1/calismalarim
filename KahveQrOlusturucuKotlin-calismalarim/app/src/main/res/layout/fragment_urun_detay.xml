<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00BEDCFB"
    tools:context=".view.UrunDetayFragment">

    <ImageView
        android:id="@+id/imgGeri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:scaleX="2"
        android:scaleY="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/tvUrunFiyat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120 TL"
        app:layout_constraintLeft_toRightOf="@id/imgUrun"
        app:layout_constraintBottom_toBottomOf="@id/imgUrun"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tvIndirimliFiyat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="95 TL"
        android:textColor="#E91E63"
        android:textSize="26sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/tvUrunFiyat"
        app:layout_constraintLeft_toRightOf="@id/tvUrunFiyat" />


    <TextView
        android:id="@+id/tvUrunAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latte"
        android:textSize="30sp"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"/>
    <ImageView
        android:id="@+id/imgUrun"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="@id/tvUrunAdi"
        app:layout_constraintTop_toBottomOf="@id/tvUrunAdi"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/tvUrunAciklama"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/imgUrun"
        app:layout_constraintLeft_toLeftOf="@id/imgUrun"/>


</androidx.constraintlayout.widget.ConstraintLayout>