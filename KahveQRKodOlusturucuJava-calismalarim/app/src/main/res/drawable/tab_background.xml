<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Seçili (aktif) tab -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#F5D5D5" /> <!-- Açık pembe tonunda arka plan -->
            <corners android:radius="30dp" />
            <stroke android:width="2dp" android:color="#8B4513" /> <!-- Kahverengi kenarlık -->
        </shape>
    </item>

    <!-- Seçilmemiş (pasif) tab -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Beyaz arka plan -->
            <corners android:radius="30dp" />
            <stroke android:width="2dp" android:color="#8B4513" /> <!-- Kahverengi kenarlık -->
        </shape>
    </item>

</selector>
